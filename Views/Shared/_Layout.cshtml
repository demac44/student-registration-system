<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Gate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/university.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color:#315a91;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><h3>E-Gate</h3></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item text-white">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item text-white">
                                <a href="/courses" class="nav-link text-white">Courses</a>
                            </li>
                            <li class="nav-item text-white">
                                <a href="/departments" class="nav-link text-white">Departments</a>
                            </li>
                            <li class="nav-item text-white">
                                <a href="/majors" class="nav-link text-white">Majors</a>
                            </li>
                        <li class="nav-item text-white">
                            <a href="/students" class="nav-link text-white">Students</a>
                        </li>
                        </ul>
                </div>
                @if (ViewData["Id"] != null)
                {
                    <span class="nav-item">
                        <a class="text-decoration-none" href="/home/logout"><button type="submit" class="nav-link text-white btn-danger">Logout</button></a>
                    </span>
                }
                else
                {
                    <span class="nav-item">
                        <a href="/students/login"><button type="submit" class="nav-link text-white btn-primary" asp-controller="Courses">Login</button></a>
                    </span>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Students E-Gate - <a asp-area="" asp-controller="Home">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
