@model dynamic

@{
    ViewData["Title"] = "Register";
}

<div class="text-center d-flex flex-column align-items-center w-100" style="height:fit-content;">
    <h2 class="display-4">Welcome to the Students E-Gate</h2>
    <div class="py-5 px-3 rounded-3" style="width:35%;border:1px solid gray;margin-top:50px;">
        <h3 class="w-100" style="text-align:left;">Register</h3>
        <form class="d-flex flex-column w-100" action="" method="post">
            <input class="w-100 p-3 rounded-3 mt-3" name="Name" placeholder="Student name" />
            <input class="w-100 p-3 rounded-3 mt-3" name="Email" type="email" placeholder="Email" />
            <input class="w-100 p-3 rounded-3 mt-3" name="Password" type="password" placeholder="Password" />
            <input class="w-100 p-3 rounded-3 mt-3" name="DateOfBirth" type="date" placeholder="Date of birth" />
            <label class="w-100 mt-3" style="text-align:left;" for="major">Choose a major:</label>
            <select class="w-100 p-3 rounded-3 mt-3" name="MajorId" id="major">
                @foreach (var major in Model)
                {
                    <option value="@major.Id">@major.Name</option>
                }
            </select>
            <button style="outline:none;border:none;" class="w-100 p-3 bg-primary text-white mt-5 rounded-3" type="submit">REGISTER</button>
        </form>
    </div>
        <div class="mt-4">
            <h5>or <a style="text-decoration:none;" href="/students/login">LOGIN</a></h5>
        </div>

</div>

